{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noImplicitReturns" : true,
        "noUnusedLocals" : true,
        "noUnusedParameters": true,
        "allowSyntheticDefaultImports": true,
        "typeRoots": ["./types"]
    }
}
